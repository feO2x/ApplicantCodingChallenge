{
    // You can use the full power of the Serilog configuration here: https://github.com/serilog/serilog-settings-configuration
    "serilog": {
        "using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.File"
        ],
        "minimumLevel": "Debug",
        "writeTo": [
            { "name": "Console" },
            {
                "name": "File",
                "args": {
                    "path": "./Logs/Hahn Application.log",
                    "rollingInterval": "Day"
                }
            }
        ]
    }
}